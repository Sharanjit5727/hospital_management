<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/make_app1"
    tools:context=".appointment">



    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/et11"
        android:layout_marginLeft="100dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="#ffffff"
        android:layout_gravity="center"
        android:drawableTint="#76FF03"
        android:layout_marginTop="150dp"
        android:hint="Name"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/et12"
        android:layout_marginLeft="100dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="#ffffff"
        android:layout_gravity="center"
        android:drawableTint="#76FF03"
android:layout_marginTop="20dp"
        android:layout_below="@+id/et11"
        android:hint="Mobile No."
        android:inputType="number"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/et13"
        android:layout_marginLeft="100dp"
        android:background="@drawable/rounded_border"
        android:backgroundTint="#ffffff"
        android:layout_gravity="center"
        android:drawableTint="#76FF03"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et12"
        android:hint="Email Address"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et13"
        android:layout_marginLeft="100dp"
        android:id="@+id/et14"
        android:textColor="#F50057"
        android:text="Blood Group:">

    </TextView>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/et14"
        android:layout_below="@id/et13"
       android:id="@+id/spin1"
        android:entries="@array/Spin"
        android:layout_marginTop="20dp"
        ></Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et14"
        android:layout_marginLeft="100dp"
        android:id="@+id/et15"
        android:textColor="#F50057"
        android:text="Doctor:">

    </TextView>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/et14"
        android:layout_below="@id/et14"
        android:id="@+id/spin2"
        android:entries="@array/Spin2"
        android:layout_marginTop="20dp"
        ></Spinner>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/but11"
       android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/et15"
        android:backgroundTint="#6EDF0F"
        android:text="Make Appointment"/>


</RelativeLayout>